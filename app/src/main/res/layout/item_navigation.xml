<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item_nav"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation.item.layout.size">

        <ImageView
            android:id="@+id/imgNavItem"
            android:layout_width="@dimen/navigation.item.image.size"
            android:layout_height="@dimen/navigation.item.image.size"
            android:layout_margin="@dimen/navigation.item.image.margin"
            android:contentDescription="@string/image.item.menu.icon" />

        <TextView
            android:id="@+id/tvNavItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imgNavItem"
            android:layout_toRightOf="@+id/imgNavItem"
            android:theme="@style/NavItemTheme" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_line"
        android:background="@android:color/white" />
</LinearLayout>