<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item_offline_song"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment.offline.item.height"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgOffSong"
            android:layout_width="@dimen/fragment.offline.item.image.song.size"
            android:layout_height="@dimen/fragment.offline.item.image.song.size"
            android:layout_margin="@dimen/fragment.offline.item.image.song.margin"
            android:contentDescription="@string/image.item.offline.icon_song"
            android:src="@drawable/ic_disk" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/fragment.offline.item.textview.margin"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/textview.item.offline.text_name_song"
                android:theme="@style/ItemOfflineSongTextViewTheme" />

            <TextView
                android:id="@+id/tvNameOffSong"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:maxLines="2"
                android:textStyle="normal"
                android:theme="@style/ItemOfflineSongTextViewTheme" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/fragment.offline.item.textview.width"
                    android:layout_height="match_parent"
                    android:text="@string/textview.item.offline.text_duration_song"
                    android:theme="@style/ItemOfflineSongTextViewTheme" />

                <TextView
                    android:id="@+id/tvDurationOffSong"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="normal"
                    android:theme="@style/ItemOfflineSongTextViewTheme" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/fragment.offline.item.textview.width"
                    android:layout_height="match_parent"
                    android:text="@string/textview.item.offline.text_genre_song"
                    android:theme="@style/ItemOfflineSongTextViewTheme" />

                <TextView
                    android:id="@+id/tvGenreOffSong"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="normal"
                    android:theme="@style/ItemOfflineSongTextViewTheme" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_line"
        android:background="@color/colorLine" />
</LinearLayout>